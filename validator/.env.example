# Solana Validator Environment Configuration

# Network Selection
# Options: mainnet-beta, testnet, devnet
SOLANA_NETWORK=mainnet-beta

# RPC Configuration
RPC_PORT=8899
WEBSOCKET_PORT=8900

# Validator Identity
# The path to validator keypair file (DO NOT SHARE)
VALIDATOR_KEYPAIR_PATH=/path/to/validator-keypair.json

# Vote Account
# The path to vote account keypair file
VOTE_ACCOUNT_PATH=/path/to/vote-account-keypair.json

# Performance Configuration
RUST_LOG=solana=info
SOLANA_METRICS_CONFIG=host=https://metrics.solana.com:8086,db=mainnet-beta,u=mainnet-beta_write,p=password

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Identity Information
VALIDATOR_NAME=TradeHybrid
VALIDATOR_DESCRIPTION=Trade Hybrid Solana Validator Node
VALIDATOR_WEBSITE=https://tradehybrid.club

# Commission Rate (as percentage)
COMMISSION_PERCENT=1

# Validator Contact Details (Optional)
CONTACT_EMAIL=validator@tradehybrid.club
CONTACT_TELEGRAM=@tradehybrid_validator

# System Configuration
MAX_LEDGER_SHREDS=50000
LIMIT_LEDGER_SIZE=50000000

# Additional Flags
ENABLE_ACCOUNTS_DB_CACHING=true
ACCOUNTS_DB_SKIP_SHRINK=true