# Webhook Service Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tradehybrid
DATABASE_SCHEMA=webhooks

# Frontend CORS
ALLOWED_ORIGINS=https://tradehybrid.club,https://signals.tradehybrid.club

# Nexus Service Connection
NEXUS_SERVICE_URL=http://localhost:4000
NEXUS_SERVICE_API_KEY=your_nexus_service_api_key

# Signal Authentication
# Different types of authentication for different webhook sources
TRADINGVIEW_WEBHOOK_SECRET=your_tradingview_webhook_secret
AI_SIGNAL_API_KEY=your_ai_signal_api_key
CUSTOM_WEBHOOK_TOKEN=your_custom_webhook_token
CASHCOW_WEBHOOK_SECRET=your_cashcow_webhook_secret

# Signal Processing
SIGNAL_EXPIRY_HOURS=24
MAX_SIGNALS_PER_SYMBOL=100
SIGNAL_CONFIDENCE_THRESHOLD=0.6

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=signals@tradehybrid.club

ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
JWT_SECRET=replace_with_secure_random_string
API_RATE_LIMIT=100
ENABLE_IP_WHITELISTING=false
WHITELISTED_IPS=127.0.0.1,192.168.1.1

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9102

# Demo Mode
ENABLE_DEMO_MODE=false
DEMO_SIGNAL_COUNT=10