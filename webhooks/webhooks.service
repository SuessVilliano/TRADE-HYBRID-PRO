[Unit]
Description=Trade Hybrid Webhook Service
After=network.target postgresql.service

[Service]
User=deploy
Group=deploy
WorkingDirectory=/var/www/tradehybrid/webhooks
ExecStart=/usr/bin/node /var/www/tradehybrid/webhooks/index.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=tradehybrid-webhooks
Environment=NODE_ENV=production
Environment=PORT=5000

[Install]
WantedBy=multi-user.target