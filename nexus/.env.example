# Nexus Service Environment Configuration

# Server Configuration
PORT=4000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tradehybrid
DATABASE_SCHEMA=nexus

# Frontend CORS
ALLOWED_ORIGINS=https://tradehybrid.club,https://nexus.tradehybrid.club

# Broker API Keys
# Alpaca
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_PAPER_TRADING=true

# OANDA
OANDA_API_KEY=your_oanda_api_key
OANDA_ACCOUNT_ID=your_oanda_account_id
OANDA_DEMO_MODE=true

# Tradier
TRADIER_API_KEY=your_tradier_api_key
TRADIER_ACCOUNT_ID=your_tradier_account_id
TRADIER_SANDBOX_MODE=true

# cTrader
CTRADER_CLIENT_ID=your_ctrader_client_id
CTRADER_CLIENT_SECRET=your_ctrader_client_secret
CTRADER_DEMO_MODE=true

# Match-Trader
MATCH_TRADER_APP_ID=your_match_trader_app_id
MATCH_TRADER_SECRET=your_match_trader_secret
MATCH_TRADER_DEMO_MODE=true

# MetaTrader Bridge
MT_BRIDGE_URL=http://localhost:6100
MT_BRIDGE_API_KEY=your_mt_bridge_api_key

# Webhook Connection
WEBHOOK_SERVICE_URL=http://localhost:5000
WEBHOOK_SERVICE_API_KEY=your_webhook_service_api_key

# Authentication
JWT_SECRET=replace_with_secure_random_string
JWT_EXPIRY=8h
REFRESH_TOKEN_EXPIRY=7d

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9101

# Security
API_RATE_LIMIT=100
ENABLE_REQUEST_LOGGING=true

# Trading Defaults
DEFAULT_RISK_PERCENT=1
DEFAULT_LEVERAGE=1
MAX_POSITIONS_PER_ACCOUNT=10
AUTO_CLOSE_ON_DISCONNECT=false

# Storage
TRADE_DATA_STORAGE_KEY=nexus_trade_data

# Legacy Compatibility
LEGACY_STORAGE_KEY=abatev_trade_data
ENABLE_LEGACY_SUPPORT=true