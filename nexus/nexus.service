[Unit]
Description=Trade Hybrid Nexus Service
After=network.target postgresql.service

[Service]
User=deploy
Group=deploy
WorkingDirectory=/var/www/tradehybrid/nexus
ExecStart=/usr/bin/node /var/www/tradehybrid/nexus/index.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=tradehybrid-nexus
Environment=NODE_ENV=production
Environment=PORT=4000

[Install]
WantedBy=multi-user.target